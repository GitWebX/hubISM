<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="373dp"
            android:elevation="7dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="7dp"
                android:src="@drawable/album3"/>

            <TextView
                android:layout_marginLeft="200dp"
                android:layout_marginTop="70dp"
                android:text="Name"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:text="E-Cell of IIT(ISM) promotes  entrepreneurship among ISMites and tries its best to provide them with necessary resources. So if you have innovative ideas in your mind, then the E-CELL fraternity is the place for you."
                 />

            <TextView
                android:layout_marginLeft="170dp"
                android:layout_marginTop="40dp"
                android:text="E-Cell Genesis"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
        </android.support.v7.widget.CardView>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="373dp"
                android:elevation="7dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="7dp"
                    android:src="@drawable/album5"/>

                <TextView
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="70dp"
                    android:text="Name"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="3dp"
                    android:text="Cyber labs is an initiative of the Cyber Society of IIT(ISM) which aims to inculcate real-time problem solving skills through computing and programming. It is a society where you'll find all the code blooded nerds discovering opportunities in the numerous fields of computing." android:id="@+id/textView6" />

                <TextView
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="40dp"
                    android:text="Cyber Labs"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>
    </LinearLayout>


</LinearLayout>